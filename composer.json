{
    "name": "xorpay/sdk",
    "description": "The Xorpay PHP SDK",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "xiaohui.lam",
            "email": "xiaohui.lam@icloud.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "illuminate/support": ">5.0",
        "guzzlehttp/guzzle": ">1.0"
    },
    "require-dev": {
        "laravel/laravel": ">5.0",
        "xiaohuilam/laravel-test": "^0.0.1",
        "phpunit/phpunit": ">=4.0",
        "mockery/mockery": "^1.2"
    },
    "autoload": {
        "psr-4": {
            "Xorpay\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Xorpay\\Test\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Xorpay\\XorpayServiceProvider"
            ],
            "aliases": {
                "Xorpay": "Xorpay\\Facade"
            }
        }
    }
}
